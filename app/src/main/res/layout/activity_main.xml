<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:orientation="vertical"
    android:backgroundTint="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to WorkHub"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_gravity="center"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your Email and Password provided by your employer."
        android:layout_marginTop="32dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textAlignment="center"
       />
    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:indeterminate="true"
        android:progressTint="@color/orange"
        android:secondaryProgressTint="@color/orange"
        android:visibility="gone" />

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColor="@color/black"
            android:hint="email"
            android:id="@+id/emaill"
            android:padding="16dp"
            android:singleLine="true"
            android:text="powan.pun77@gmail.com"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray" />
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <EditText
            android:id="@+id/passwrd"
            android:padding="16dp"
            android:hint="password"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
           android:text="123456789"
           android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <CheckBox
            android:id="@+id/remem"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FD8204"
            android:text="Remember Me"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:targetApi="lollipop"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/forg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:text="Forget password?"
            android:textColor="#5F38D3"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal" />




    </LinearLayout>


    <RadioGroup
        android:id="@+id/radioBu"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="5sp">
    <RadioButton
        android:id="@+id/male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:buttonTint="#FD8204"
        android:layout_marginTop="10dp"
        android:text="I accept privacy policy and terms and conditions."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:targetApi="lollipop" />
    </RadioGroup>




    <Button
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/log"
        android:backgroundTint="#FD8204"
        android:text="Login"
        />



    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For a Business?"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:linksClickable="true"
        android:layout_marginTop="24dp"
        android:textSize="15sp"
        />

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/ress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Here"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/orange"
            android:linksClickable="true"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="   to be a part of WorkHub."
            android:textColor="@color/black"
            android:linksClickable="true"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            />



    </LinearLayout>


</LinearLayout>